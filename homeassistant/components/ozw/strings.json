              # Thermostats
          - type: custom:simple-thermostat
            entity: climate.seattle
            step_layout: column
            decimals: 0
          - type: custom:simple-thermostat
            name: Haven
            entity: climate.cabin
            step_layout: column
            decimals: 0
          - type: custom:simple-thermostat
