      #
      # Component: Seattle Weather & Thermostat
      #
      - type: custom:stack-in-card
        cards:
          - type: markdown
            content: |
              # Seattle
              ## Weather
          - type: weather-forecast
            entity: weather.seattle # NWS: weather.kbfi_daynight
            show_forecast: true
            secondary_info_attribute: precipitation
          - type: markdown
            content: |
              ---
              ## Thermostat
          - type: custom:simple-thermostat
            entity: climate.seattle
            step_layout: column
            icon: true
            control: true
            name: false
            decimals: 0
            style: |
              .sensor-value {
                font-size: 30px;
                font-weight: 900;
}

              ha-card {
                --st-font-size-xl: 30px;

      #
      # Component: Entities
      #
      - type: entities
        title: Outside Lights
        entities:
          - entity: group.front
          - entity: group.back
          - entity: group.outside
        style: |
          ha-card {
            background-color: #2babf0;
            color: black;
  }
          .card-content {
            background: rgba(0,
    0,
    0,
    0.3);
            font-size: 1.3em;
  }

      #
      # Component: All Entities
      #
      - type: custom:auto-entities
        card:
          type: glance
          show_state: false
          columns: 3
          title: All Lights & Switches
        filter:
          include:
            - domain: light
              options:
                tap_action:
                  action: toggle
                hold_action:
                  action: more-info
                double_tap_action:
                  action: more-info
            - domain: switch
              options:
                tap_action:
                  action: toggle
                hold_action:
                  action: more-info
                double_tap_action:
                  action: more-info
          exclude:
            - entity_id: "*wallmote*" # Wallmote
        sort:
          method: name
          ignore_case: true


