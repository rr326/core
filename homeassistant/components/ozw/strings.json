title: Seattle Home Dashboard
views:
  #
  # View: Overview
  #
  - title: Overview
    path: Overview
    badges: []
    cards:
      #
      # Component: Main Actions & Status
      #
      - type: vertical-stack
        cards:
          # Level 1: Home Mode, Gentle Wakeup
          - type: horizontal-stack
            cards:
              - type: "custom:button-card"
                entity: input_select.home_state
                icon: mdi:home
                card_size: 1
                name: Home Mode
                show_state: true
                color_type: card
                tap_action:
                  action: call-service
                  service: input_select.select_option
                  service_data:
                    entity_id: input_select.home_state
                    option: >
                      [
  [
    [
                        if (entity.state === "Home") {
                          return "Away"
      } else {
                          return "Home"
      }
    ]
  ]
]
                styles:
                  name:
                    - font-size: 20px
                    - font-weight: bold
                  card:
                    - font-size: 12px
                    - font-weight: bold
                    - color: black
                state:
                  - value: "Home"
                    styles:
                      card:
                        - background-color: green
                  - value: "Away"
                    styles:
                      card:
                        - background-color: yellow

              - type: "custom:button-card"
                entity: input_boolean.gentle_wakeup
                icon: mdi:alarm-multiple
                card_size: 1
                name: Gentle Wakeup
                show_state: true
                color_type: card
                styles:
                  name:
                    - font-size: 20px
                    - font-weight: bold
                  card:
                    - font-size: 12px
                    - font-weight: bold
                    - color: black
                state:
                  - value: "on"
                    styles:
                      card:
                        - background-color: green
                  - value: "off"
                    styles:
                      card:
                        - background-color: yellow

          # Level 2 - Haven Heat On, Haven Turn Heat Off
          - type: horizontal-stack
            cards:
              - type: "custom:button-card"
                entity: app.autoclimate_state
                icon: mdi:pine-tree
                card_size: 1
                color_type: card
                styles:
                  name:
                    - font-size: 20px
                    - font-weight: bold
                  card:
                    - font-size: 12px
                    - font-weight: bold
                    - color: black
                state:
                  - value: "on"
                    styles:
                      card:
                        - background-color: red
                    name: "Haven Heat<br>On"
                  - value: "offline"
                    styles:
                      card:
                        - background-color: yellow
                    name: "Haven Heat<br>Offline"
                  - value: "off"
                    styles:
                      card:
                        - background-color: green
                    name: "Haven Heat<br>Off"

              - type: "custom:button-card"
                entity: app.autoclimate_heat_state
                icon: mdi:light-switch
                card_size: 1
                name: Haven Heat<br> Turn Off
                color_type: card
                styles:
                  name:
                    - font-size: 20px
                    - font-weight: bold
                  card:
                    - font-size: 12px
                    - font-weight: bold
                    - background-color: "#2babf0"
                    - color: black
                tap_action:
                  action: call-service
                  service: script.fire_event_autoclimate_turn_off_all

          # Level 3 - Haven Temperatures
          - type: horizontal-stack
            cards:
              - type: custom:bignumber-card
                title: Haven
                entity: sensor.autoclimate_cabin_temperature
                scale: 21px
                noneString: Offline
                noneCardClass: "none-card-class"
                round: 0
                style: |
                  #value {
                    color: black;
}

                  #title {
                    color: black
}
                  .none-card-class {
                    background-color: yellow;
}

                  ha-card {
                      background-color: {
    { state_attr('app.dashboard_colors', 'climate.cabin')
    }
  };
}

              - type: custom:bignumber-card
                title: Bathroom
                entity: sensor.autoclimate_master_bath_floor_heater_temperature
                scale: 21px
                noneString: Offline
                noneCardClass: "none-card-class"
                round: 0
                style: |
                  #value {
                    color: black;
}

                  #title {
                    color: black
}
                  .none-card-class {
                    background-color: yellow;
}

                  ha-card {
                      background-color: {
    { state_attr('app.dashboard_colors', 'climate.master_bath_floor_heater')
    }
  };
}
              - type: custom:bignumber-card
                title: TV Room
                entity: sensor.autoclimate_tv_room_temperature
                scale: 21px
                noneString: Offline
                noneCardClass: "none-card-class"
                round: 0
                style: |
                  #value {
                    color: black;
}
                  #title {
                    color: black
}
                  .none-card-class {
                    background-color: yellow;
}
                  ha-card {
                      background-color: {
    { state_attr('app.dashboard_colors', 'climate.tv_room')
    }
  };
}
              - type: custom:bignumber-card
                title: Gym
                entity: sensor.autoclimate_gym_temperature
                scale: 21px
                noneString: Offline
                noneCardClass: "none-card-class"
                round: 0
                style: |
                  #value {
                    color: black;
}

                  #title {
                    color: black
}
                  .none-card-class {
                    background-color: yellow;
}
                  ha-card {
                      background-color: {
    { state_attr('app.dashboard_colors', 'climate.gym')
    }
  };
}

          # Level 4: Other actions (TBD)
          - type: horizontal-stack
            cards:
              - type: "custom:button-card"
                entity: input_boolean.trigger_all_off
                icon: mdi:light-switch
                card_size: 1
                name: All Off
                color_type: card
                styles:
                  name:
                    - font-size: 20px
                    - font-weight: bold
                  card:
                    - font-size: 12px
                    - font-weight: bold
                    - background-color: "#2babf0"
                    - color: black
                tap_action:
                  action: call-service
                  service: mqtt.publish
                  service_data:
                    topic: "trigger/all_off"
                    payload: ""

              - type: "custom:button-card"
                entity: input_boolean.trigger_all_media_off
                icon: mdi:light-switch
                card_size: 1
                name: Sonos Off
                color_type: card
                styles:
                  name:
                    - font-size: 20px
                    - font-weight: bold
                  card:
                    - font-size: 12px
                    - font-weight: bold
                    - background-color: "#2babf0"
                    - color: black
                tap_action:
                  action: call-service
                  service: mqtt.publish
                  service_data:
                    topic: "trigger/all_media_off"
                    payload: ""

              - type: "custom:button-card"
                entity: input_boolean.trigger_all_lights_off
                icon: mdi:light-switch
                card_size: 1
                name: Lights Off
                color_type: card
                styles:
                  name:
                    - font-size: 20px
                    - font-weight: bold
                  card:
                    - font-size: 12px
                    - font-weight: bold
                    - background-color: "#2babf0"
                    - color: black
                tap_action:
                  action: call-service
                  service: mqtt.publish
                  service_data:
                    topic: "trigger/all_lights_off"
                    payload: ""

          # Level 5: Sonos Buttons
          - type: horizontal-stack
            cards:
              - type: "custom:button-card"
                entity: media_player.office
                icon: mdi:speaker
                card_size: 1
                name: Office
                color_type: card
                styles:
                  name:
                    - font-size: 20px
                    - font-weight: bold
                  card:
                    - font-size: 12px
                    - font-weight: bold
                    - background-color: white
                    - color: black
                state:
                  - value: "playing"
                    styles:
                      card:
                        - background-color: yellow
                tap_action:
                  action: call-service
                  service: media_player.media_pause
                  service_data:
                    entity_id: media_player.office
              - type: "custom:button-card"
                entity: media_player.family_room
                icon: mdi:speaker
                card_size: 1
                name: Family
                color_type: card
                styles:
                  name:
                    - font-size: 20px
                    - font-weight: bold
                  card:
                    - font-size: 12px
                    - font-weight: bold
                    - background-color: white
                    - color: black
                state:
                  - value: "playing"
                    styles:
                      card:
                        - background-color: yellow
                tap_action:
                  action: call-service
                  service: media_player.media_pause
                  service_data:
                    entity_id: media_player.family_room
              - type: "custom:button-card"
                entity: media_player.kestrel_room
                icon: mdi:speaker
                card_size: 1
                name: Kestrel
                color_type: card
                styles:
                  name:
                    - font-size: 20px
                    - font-weight: bold
                  card:
                    - font-size: 12px
                    - font-weight: bold
                    - background-color: white
                    - color: black
                state:
                  - value: "playing"
                    styles:
                      card:
                        - background-color: yellow
                tap_action:
                  action: call-service
                  service: media_player.media_pause
                  service_data:
                    entity_id: media_player.kestrel_room
              - type: "custom:button-card"
                entity: media_player.marley_room
                icon: mdi:speaker
                card_size: 1
                name: Marley
                color_type: card
                styles:
                  name:
                    - font-size: 20px
                    - font-weight: bold
                  card:
                    - font-size: 12px
                    - font-weight: bold
                    - background-color: white
                    - color: black
                state:
                  - value: "playing"
                    styles:
                      card:
                        - background-color: yellow
                tap_action:
                  action: call-service
                  service: media_player.media_pause
                  service_data:
                    entity_id: media_player.marley_room

        # TestApp Button

        # - type: "custom:button-card"
        #   entity: app.test_app
        #   icon: mdi:flash
        #   card_size: 1
