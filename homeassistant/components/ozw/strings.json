            name: Haven Floor
            step_layout: column
            decimals: 0
          - type: custom:simple-thermostat
            entity: climate.gym
            step_layout: column
            decimals: 0
          - type: custom:simple-thermostat
            entity: climate.tv_room
            step_layout: column
            decimals: 0

      #
      # Component: All Entities
      #
      - type: custom:auto-entities
        card:
          type: entities
          show_state: false
          title: Entities
        filter:
          include:
            - domain: light
            - domain: switch
            - domain: lock
          exclude:
            - entity_id: "*wallmote*" # Wallmote
        sort:
          method: name
          ignore_case: true

      #
      # States
      #
      - type: custom:auto-entities
        card:
          type: entities
          show_state: false
          show_name: false
          title: States
        filter:
          include:
            - domain: "input_boolean"
            - domain: "input_select"
          exclude:
            - entity_id: "*autoclimate_turn_heat_off"
            - entity_id: "*trigger*"
        sort:
          method: name
          ignore_case: true

      #
      # App States
      #
      - type: custom:auto-entities
        card:
          type: entities
          show_state: false
          show_name: false
          title: App States
        filter:
          include:
            - domain: "app"
        sort:
          method: name
          ignore_case: true

      #
      # Component: Sonos
      #
      - type: custom:stack-in-card
        cards:
          - type: markdown
            content: |
              # Sonos
          - type: media-control
            entity: media_player.family_room
          - type: media-control
            entity: media_player.kestrel_room
          - type: media-control
            entity: media_player.living_room
          - type: media-control
            entity: media_player.marley_room
          - type: media-control
            entity: media_player.office
          - type: media-control
            entity: media_player.tv_room

