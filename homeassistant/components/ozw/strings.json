  ##################################################################
  ##################################################################

  #
  # View: Details
  #
  - title: Details
    path: Details
    badges:
      - entity: sensor.seattle_temperature
      - entity: sensor.cabin_temperature
      - entity: sensor.gym_temperature
      - entity: sensor.tv_room_temperature
